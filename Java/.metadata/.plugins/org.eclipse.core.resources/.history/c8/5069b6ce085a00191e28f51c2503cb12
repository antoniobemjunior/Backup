package ex02;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {

		String nome = "";
		int altura = 0;
		int idade = 0;
		int peso = 0;
		int total = 0;
		int tempAltura = 0, tempIdade = 0, tempPeso = 0;
		String tempNome = "";
		boolean valida = false;
		String[] x = {"Continuar","Concluir"};
		
		do {
			nome = JOptionPane.showInputDialog("Digite seu nome: ");
			altura = Integer.parseInt(JOptionPane.showInputDialog("Digite sua altura: "));
			idade = Integer.parseInt(JOptionPane.showInputDialog("Digite sua idade: "));
			peso = Integer.parseInt(JOptionPane.showInputDialog("Digite seu peso: "));
			
			if(altura > tempAltura) {
				tempAltura = altura;
				tempNome = nome;
			}

			if(idade > tempIdade) {
				tempIdade = idade;
				tempNome = nome;
			}
			
			if(peso > tempPeso) {
				tempPeso = peso;
				tempNome = nome;
			}
			total++;
			int v0 = JOptionPane.showOptionDialog(null,"Escolha uma opчуo: ","",JOptionPane.YES_NO_CANCEL_OPTION,JOptionPane.QUESTION_MESSAGE,null,x,null);
			
			if(v0 == 0 || total >= 10) valida = false;
			else valida = true;
		}while(valida == false);
		
		JOptionPane.showMessageDialog(null, "a)\nA quantidade de pessoa cadastradas щ: "+total);
		JOptionPane.showMessageDialog(null, "b)\nO jogador mais alto щ: "+tempNome+" e sua altura щ: "+tempAltura);
		JOptionPane.showMessageDialog(null, "c)\nO jogador mais velho щ: "+tempNome+" e sua idade щ: "+tempIdade);
		JOptionPane.showMessageDialog(null, "d)\nO jogador mais pesado щ: "+tempNome+" e seu peso щ: "+tempPeso);
		
	}

}
	

