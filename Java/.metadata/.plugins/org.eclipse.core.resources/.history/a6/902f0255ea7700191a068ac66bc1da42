package acao;

import java.text.DecimalFormat;

import javax.swing.table.DefaultTableModel;

import beans.Produto;
import dados.Dados;

@SuppressWarnings("unused")
public class Acao {

	Produto pr = new Produto();
	int valor;
	
	public void cadastrar(int p) {
		Dados.produtos += p;
	}
	
	public void produto1(int n, int p) {
		valor += p;
		if(n ==1 ) {
			pr.setProd1(valor);
		}
		if(n ==2 ) {
			pr.setProd2(valor);
		}
		if(n ==3 ) {
			pr.setProd3(valor);
		}
		if(n ==4 ) {
			pr.setProd4(valor);
		}
		if(n ==5 ) {
			pr.setProd5(valor);
		}
		if(n ==6 ) {
			pr.setProd6(valor);
		}
		if(n ==7 ) {
			pr.setProd7(valor);
		}
		if(n ==8 ) {
			pr.setProd8(valor);
		}
	}

	
}
